{
	"extends": [
		"tslint:recommended",
		"tslint-eslint-rules"
	],
	"rules": {
		"trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
		"no-conditional-assignment": true,
		"no-console": [true, "dir", "error", "log", "warn"],
		"no-debugger": true,
		"no-empty": true,
		"curly": true,
		"switch-default": false,
		"triple-equals": true,
		"forin": true,
		"no-arg": true,
		"no-eval": true,
		"no-switch-case-fall-through": false,
		"no-duplicate-variable": true,
		"no-unused-expression": [true, "allow-fast-null-checks"],
		"radix": true,
		"no-shadowed-variable": false,
		"no-use-before-declare": true,
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-trailing-underscore"],
		"max-file-line-count": [false],
		"no-consecutive-blank-lines": [true],
		"no-trailing-whitespace": true,
		"one-variable-per-declaration": [true, "ignore-for-loop"],
		"quotemark": [true, "single", "avoid-escape"],
		"semicolon": [true, "always"],
		"no-var-keyword": true,
		"no-magic-numbers": false,
		"label-position": true,
		"no-bitwise": true,
		"no-construct": true,
		"max-line-length": [false],
		"prefer-const": true,
		"cyclomatic-complexity": [true, 11],
		"object-literal-key-quotes": [true, "as-needed"],
		"no-string-throw": true,
		"no-unsafe-finally": true,
		"arrow-parens": true,
		"comment-format": [true, "check-space"],
		"new-parens": true,
		"object-literal-shorthand": true,
		"ban": [true, ["alert"], ["confirm"], ["prompt"]],
		"eofline": true,
		"linebreak-style": [true, "LF"],

		"adjacent-overload-signatures": true,
		"no-empty-interface": true,
		"no-namespace": true,
		"no-var-requires": false,
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			},
			{
				"call-signature": "onespace",
				"index-signature": "onespace",
				"parameter": "onespace",
				"property-declaration": "onespace",
				"variable-declaration": "onespace"
			}
		],
		"class-name": true,
		"use-isnan": true,
		"interface-name": [true, "never-prefix"],
		"no-angle-bracket-type-assertion": true,
		"no-parameter-properties": false,
		"no-reference": true,

		"indent": [false],
		"jsdoc-format": false,
		"member-access": false,
		"object-literal-sort-keys": false,
		"ordered-imports": [false],
		"member-ordering": [false],
		"only-arrow-functions": [false],
		"max-classes-per-file": [false],
		"align": [false],

		"no-inner-declarations": [true, "both"],
		"no-multi-spaces": [true],
		"array-bracket-spacing": [true, "never"],
		"block-spacing": [true, "always"],
		"brace-style": [true, "1tbs", { "allowSingleLine": true }],
		"ter-indent": [true, "tab", { "MemberExpression": 1, "SwitchCase": 1 }],
		"object-curly-spacing": [true, "always"],
		"ter-arrow-spacing": [true, { "before": true, "after": true }],
		"no-extra-boolean-cast": true,
		"no-constant-condition": true,
		"no-control-regex": true,
		"no-duplicate-case": true,
		"no-empty-character-class": true,
		"no-ex-assign": true,
		"no-extra-semi": true,
		"no-invalid-regexp": true,
		"no-irregular-whitespace": true,
		"no-regex-spaces": true,
		"no-sparse-arrays": true,
		"no-unexpected-multiline": true,
		"valid-typeof": true,
		"interface-over-type-literal": false
	}
}
